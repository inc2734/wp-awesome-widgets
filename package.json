{
  "author": "inc2734",
  "license": "GPL-2.0+",
  "devDependencies": {
    "@wordpress/browserslist-config": "^3.0.2",
    "@wordpress/env": "^4.0.1",
    "@wordpress/scripts": "^14.1.0",
    "autoprefixer": "^10.2.5",
    "cpy-cli": "^3.1.1",
    "cssnano": "^5.0.0",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.10",
    "postcss-cli": "^8.3.1",
    "rimraf": "^3.0.2",
    "slick-carousel": "^1.8.1"
  },
  "scripts": {
    "wp-env": "wp-env",
    "start": "wp-env start",
    "stop": "wp-env stop",
    "cli": "wp-env run cli",
    "wp": "wp-env run cli wp",
    "pretest": "wp-env start && wp-env run composer 'install --no-interaction'",
    "test:lint:php": "wp-env run composer run-script lint",
    "test:lint": "run-s test:lint:*",
    "test:unit:php": "wp-env run phpunit 'phpunit -c /var/www/html/wp-content/plugins/wp-awesome-widgets/.phpunit.xml.dist --verbose'",
    "test:unit": "run-s test:unit:*",
    "test": "run-s test:*",
    "cleanup:css:front": "rimraf src/assets/css",
    "cleanup:css:admin": "rimraf src/assets/admin-css",
    "cleanup:js:front": "rimraf src/assets/js",
    "cleanup:js:admin": "rimraf src/assets/admin-js",
    "cleanup:packages": "rimraf src/assets/packages",
    "css:front:sass": "node-sass src/src/admin-css/wp-awesome-widgets-admin.scss -o src/assets/admin-css",
    "css:front:postcss": "postcss src/assets/admin-css/wp-awesome-widgets-admin.css -o src/assets/admin-css/wp-awesome-widgets-admin.min.css -c=postcss.config.js",
    "css:front": "npm-run-all -s css:front:*",
    "css:admin:sass": "node-sass src/src/css/wp-awesome-widgets.scss -o src/assets/css",
    "css:admin:postcss": "postcss src/assets/css/wp-awesome-widgets.css -o src/assets/css/wp-awesome-widgets.min.css -c=postcss.config.js",
    "css:admin": "npm-run-all -s css:admin:*",
    "css": "npm-run-all -p css:*",
    "js:widget": "wp-scripts build src/src/js/widget/pickup-slider src/src/js/widget/carousel-any-posts src/src/js/widget/slider --output-path=src/assets/js/widget",
    "js:admin": "wp-scripts build src/src/admin-js/wp-awesome-widgets-admin src/src/admin-js/customize-preview src/src/admin-js/elementor-preview --output-path=src/assets/admin-js",
    "js": "npm-run-all -p cleanup:js:* && npm-run-all -p js:*",
    "packages:slick-carousel": "cpy 'slick-carousel/**' '../src/assets/packages' --cwd=node_modules --parents",
    "packages": "npm-run-all -p packages:*",
    "build": "npm-run-all -p css js packages"
  },
  "dependencies": {
    "@inc2734/for-each-html-nodes": "^0.4.0"
  }
}
