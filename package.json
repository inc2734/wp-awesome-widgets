{
  "author": "inc2734",
  "license": "GPL-2.0+",
  "devDependencies": {
    "@wordpress/browserslist-config": "^5.8.0",
    "@wordpress/env": "^5.10.0",
    "@wordpress/icons": "^9.16.0",
    "@wordpress/scripts": "^25.2.0",
    "autoprefixer": "^10.4.13",
    "cpy-cli": "^4.2.0",
    "cssnano": "^5.1.14",
    "node-sass": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "prettier": "^2.8.3",
    "rimraf": "^4.1.1",
    "sass-basis": "^18.0.0-beta6",
    "slick-carousel": "^1.8.1"
  },
  "scripts": {
    "wp-env": "wp-env",
    "start": "wp-env start",
    "stop": "wp-env stop",
    "cli": "wp-env run cli",
    "wp": "wp-env run cli wp",
    "composer": "wp-env run composer",
    "pretest": "wp-env start && wp-env run composer 'install --no-interaction'",
    "test:lint:php": "wp-env run composer run-script lint",
    "test:lint:js": "wp-scripts lint-js src/src/blocks",
    "test:lint": "run-s test:lint:*",
    "test:unit:php": "wp-env run phpunit 'phpunit -c /var/www/html/wp-content/plugins/wp-awesome-widgets/.phpunit.xml.dist --verbose'",
    "test:unit": "run-s test:unit:*",
    "test": "run-s test:*",
    "clean:css": "rimraf src/assets/css",
    "clean:js": "rimraf src/assets/js",
    "clean:packages": "rimraf src/assets/packages",
    "clean:translation": "rimraf src/.translation && mkdir -p src/.translation",
    "css:front": "node-sass src/src/css/app.scss src/assets/css/app.css && postcss -r src/assets/css/app.css -c=postcss.config.js",
    "css:admin": "node-sass src/src/css/admin.scss src/assets/css/admin.css && postcss -r src/assets/css/admin.css -c=postcss.config.js",
    "css:editor": "node-sass src/src/css/editor.scss src/assets/css/editor.css && postcss -r src/assets/css/editor.css -c=postcss.config.js",
    "css": "npm run clean:css && npm-run-all -p css:*",
    "js:widget": "wp-scripts build src/src/js/widget/pickup-slider src/src/js/widget/carousel-any-posts src/src/js/widget/slider --output-path=src/assets/js/widget --webpack-src-dir=src/src/js",
    "js:admin": "wp-scripts build src/src/js/admin/admin src/src/js/admin/customize-preview src/src/js/admin/elementor-preview --output-path=src/assets/js/admin --webpack-src-dir=src/src/admin",
    "js": "npm run clean:js && npm-run-all -p js:*",
    "blocks:format": "wp-scripts format src/src/blocks",
    "blocks:build": "rimraf src/assets/blocks && wp-scripts build --webpack-src-dir=src/src/blocks --output-path=src/assets/blocks",
    "blocks:php": "cpy \"src/src/blocks/**/*.php\" \"src/assets/blocks\"",
    "blocks": "run-s blocks:format blocks:build blocks:php",
    "packages:slick-carousel": "cpy './slick' '../../src/assets/packages/slick-carousel' --cwd=node_modules/slick-carousel --parents",
    "packages": "rimraf src/assets/packages && npm-run-all -p packages:*",
    "make-pot": "npm run wp-env start && npm run wp 'i18n make-pot ./wp-content/plugins/wp-awesome-widgets/src ./wp-content/plugins/wp-awesome-widgets/src/languages/inc2734-wp-awesome-widgets.pot --domain=inc2734-wp-awesome-widgets --exclude=src/blocks'",
    "make-json": "rimraf src/languages/*.json && npm run wp 'i18n make-json ./wp-content/plugins/wp-awesome-widgets/src/languages/inc2734-wp-awesome-widgets-ja.po --no-purge'",
    "build": "npm-run-all -p css js packages blocks"
  },
  "dependencies": {
    "@inc2734/for-each-html-nodes": "^0.4.0"
  }
}
