{
  "author": "inc2734",
  "license": "GPL-2.0+",
  "devDependencies": {
    "@wordpress/browserslist-config": "^4.0.1",
    "@wordpress/env": "^4.0.5",
    "@wordpress/icons": "^4.0.1",
    "@wordpress/scripts": "^16.1.3",
    "autoprefixer": "^10.2.6",
    "cpy-cli": "^3.1.1",
    "cssnano": "^5.0.6",
    "node-sass": "^6.0.1",
    "npm-run-all": "^4.1.5",
    "po2json": "^1.0.0-alpha",
    "postcss": "^8.3.5",
    "postcss-cli": "^8.3.1",
    "rimraf": "^3.0.2",
    "slick-carousel": "^1.8.1"
  },
  "scripts": {
    "wp-env": "wp-env",
    "start": "wp-env start",
    "stop": "wp-env stop",
    "cli": "wp-env run cli",
    "wp": "wp-env run cli wp",
    "pretest": "wp-env start && wp-env run composer 'install --no-interaction'",
    "test:lint:php": "wp-env run composer run-script lint",
    "test:lint:js": "wp-scripts lint-js src/block",
    "test:lint": "run-s test:lint:*",
    "test:unit:php": "wp-env run phpunit 'phpunit -c /var/www/html/wp-content/plugins/wp-awesome-widgets/.phpunit.xml.dist --verbose'",
    "test:unit": "run-s test:unit:*",
    "test": "run-s test:*",
    "clean:css": "rimraf src/assets/css",
    "clean:js": "rimraf src/assets/js",
    "clean:packages": "rimraf src/assets/packages",
    "clean:translation": "rimraf .translation && mkdir -p .translation",
    "css:front": "node-sass src/src/css/app.scss src/assets/css/app.css && postcss -r src/assets/css/app.css -c=postcss.config.js",
    "css:admin": "node-sass src/src/css/admin.scss src/assets/css/admin.css && postcss -r src/assets/css/admin.css -c=postcss.config.js",
    "css:editor": "node-sass src/src/css/editor.scss src/assets/css/editor.css && postcss -r src/assets/css/editor.css -c=postcss.config.js",
    "css": "npm run clean:css && npm-run-all -p css:*",
    "js:widget": "wp-scripts build src/src/js/widget/pickup-slider src/src/js/widget/carousel-any-posts src/src/js/widget/slider --output-path=src/assets/js/widget",
    "js:admin": "wp-scripts build src/src/js/admin/admin src/src/js/admin/customize-preview src/src/js/admin/elementor-preview --output-path=src/assets/js/admin",
    "js:editor": "wp-scripts build src/src/js/editor/editor --output-path=src/assets/js/editor",
    "js": "npm run  clean:js && npm-run-all -p js:*",
    "block:local-nav:clean": "rimraf src/assets/block/local-nav && mkdir -p src/assets/block/local-nav",
    "block:local-nav:js": "wp-scripts build src/block/local-nav/editor --output-path=src/assets/block/local-nav",
    "block:local-nav": "run-s block:local-nav:*",
    "block:recent-posts:clean": "rimraf src/assets/block/recent-posts && mkdir -p src/assets/block/recent-posts",
    "block:recent-posts:js": "wp-scripts build src/block/recent-posts/editor --output-path=src/assets/block/recent-posts",
    "block:recent-posts": "run-s block:recent-posts:*",
    "block:profile-box:clean": "rimraf src/assets/block/profile-box && mkdir -p src/assets/block/profile-box",
    "block:profile-box:js": "wp-scripts build src/block/profile-box/editor --output-path=src/assets/block/profile-box",
    "block:profile-box": "run-s block:profile-box:*",
    "block": "run-s block:*",
    "packages:slick-carousel": "cpy 'slick-carousel/**' '../src/assets/packages' --cwd=node_modules --parents",
    "packages": "npm-run-all -p packages:*",
    "format:js": "wp-scripts format src/block",
    "format": "run-p format:*",
    "po2json:wp-awesome-widgets-editor": "po2json -f jed src/languages/ja.po src/languages/inc2734-wp-awesome-widgets-ja-wp-awesome-widgets-editor.json",
    "po2json": "run-p po2json:*",
    "translation:metadata": "php bin/translation.php",
    "translation": "npm run clean:translation && run-p translation:*",
    "build": "npm-run-all -p css js packages block translation po2json"
  },
  "dependencies": {
    "@inc2734/for-each-html-nodes": "^0.4.0"
  }
}
